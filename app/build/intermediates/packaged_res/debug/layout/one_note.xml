<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/borderradius"
    android:layout_marginBottom="20dp"
    >

    <TextView
        android:id="@+id/RVNotetitle"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:text="TextView"
        android:textSize="29dp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="70dp" />

    <TextView
        android:id="@+id/RvNotecotent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RVNotetitle"
        android:minHeight="50dp"
        android:text="TextView"
    android:textSize="10dp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="70dp" />

    <TextView
        android:id="@+id/RVNoteid"
        android:layout_width="24dp"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/RVNotetitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="21dp"
        android:layout_toLeftOf="@id/RVNotetitle"
        android:text="id:" />

</RelativeLayout>